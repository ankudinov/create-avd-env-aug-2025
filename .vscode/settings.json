{
    "markdownlint.config": {
        "default": true,
        // allow multiple H1s for Marp
        "MD025": false,
        "MD004": false,
        "MD033": {
            "allowed_elements": [
                "div",
                "span",
                "style",
                "br",
                "sup",
                "iframe",
                // for underlined text
                "u",
                "ins",
                // highlighted text
                "mark"
            ]
        }
    },
    "markdown.marp.themes": [
        "./themes/dracula-custom.css",
        "./themes/einstein.css",
        "./themes/jobs.css",
    ],
    "markdown.marp.html": "all"
}